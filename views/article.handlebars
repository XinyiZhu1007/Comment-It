<div class="row"> 
  <h3 class="card">{{info.title}}</h3>
  <h5 class="card-panel"><i>{{author}}</i></h5>
  {{#each body}}
  <h5 class="card-panel">{{this}}</h5>
  {{/each}}
  
</div>


<div class="row">
  <div class="col s2"></div>
   <form action="/comments/{{info._id}}" method="POST" class="card-panel">
    <h3>Comment on this Article:</h3>
      <div class="row">
        <div class="input-field">
          <center><div class="input-title">name</div>
          <input type="text" placeholder="Name" name="name"></center>
        </div>
        <div class="input-field">
          <center><div class="input-title">comment</div>
          <textarea type="text" placeholder="Comment" name="comment"></textarea></center>
        </div>
      </div>
      
      <div class="row">
        <div class="input-field">
        <center><input class="btn add-comment-button" type="submit" value="Submit"></center>
        </div>
      </div>
    </form>
</div>

{{!-- comments --}}
<div class="row">
  <div class="col s2"></div>
    <div class="col s8">
      <h3>Comments:</h3>
        {{#if info.comments}}
          {{#each info.comments}}
            <div class="card">
              <p id="nameComment"><i>{{name}}</i></p>
              <p>{{body}}<p>
            </div>
          {{/each}}
          {{else}}
          <p>No Comments Yet.</p>
          <p>Come and Be the First Person to Leave One!</p>
        {{/if}}
    </div>
</div>