<div class="row"> 
  <h3 class="card">{{article.title}}</h3>
  <h5 class="card-panel articleBody">{{body}}</h5>
  
</div>


<div class="row">
  <div class="col s2"></div>
   <form action="/comments/{{article._id}}" method="POST" class="card-panel col s8">
    <h5>Comment on this Article:</h5>
      <div class="row">
        <div class="input-field">
          <div class="input-title">name</div>
          <input type="text" placeholder="Name" name="name" class="validate active">
        </div>
        <div class="input-field">
          <div class="input-title">comment</div><br>
          <textarea type="text" placeholder="Comment" name="comment" class="validate active"></textarea>
        </div>
      </div>
      
      <div class="row">
        <div class="input-field">
        <center><input class="btn add-comment-button" type="submit" value="Submit"></center>
        </div>
      </div>
    </form>
</div>

{{!-- comments --}}
<div class="row">
  <div class="col s2"></div>
    <div class="col s8">
      <h5>Comments:</h5>
        {{#if article.comments}}
          {{#each article.comments}}
            <div class="card">
              <p id="nameComment">{{name}}</p>
              <p>{{body}}<p>
            </div>
          {{/each}}
          {{else}}
          <p>No Comments Yet.</p>
        {{/if}}
    </div>
</div>